---
  import logo from '../images/Samsung.svg'

---

<header class="header">
  <div class="container">
    <div class="logo">
      <a href="#">
        <img src={logo} alt="logo">
      </a>
    </div>
    <nav>
      <ul>
        <li><a href="index.html">Home</a></li>
        <li><a href="about.html">About</a></li>
        <li><a href="blog.html">Blog</a></li>
      </ul>
    </nav>
  </div>
</header>


<style>
  .header {
    background: rgb(49, 49, 49);
    color: white;
    height: 50px;
    display: flex;
    justify-content: space-between;
    padding: 0 10px;
  }

  .logo img {
    width: 70px;
    height: 10px;
  }

  .container {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  ul {
    display: flex;
    align-items: center;
    list-style: none;
    gap: 1rem;
  }

  ul li a {
    color: white;
    text-decoration: none;
    font-size: 13px;
  }
</style>