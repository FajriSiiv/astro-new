---
  export interface Props {
    title?: string
    body?: string
    dark?: boolean
  }

  const { title, body, dark = false } = Astro.props as Props;

---

<div class={`card ${dark && "dark" }`}>
  <h3>{title}</h3>
  <p>{body}</p>
</div>


<style>
  .card {
    background-color: #fff;
    padding: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.103);
    margin: 0 5px;
    margin-bottom: 10px;
  }

  .dark {
    background-color: rgb(163, 163, 163);
    color: white;
  }
</style>